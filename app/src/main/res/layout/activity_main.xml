<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg">


    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/l_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_main_dzyh" />

            <TextView
                android:id="@+id/nav_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/main_menu_text_color_over"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_main_dhys" />

            <TextView
                android:id="@+id/nav_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/main_menu_text_color"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_conference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_conference"
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_main_dsz" />

            <TextView
                android:id="@+id/nav_conference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="设置"
                android:textColor="@color/main_menu_text_color"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_mine"
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_main_dtxl" />

            <TextView
                android:id="@+id/nav_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/main_menu_text_color"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:id="@+id/scr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_menu"
        android:fillViewport="true">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"></FrameLayout>
    </ScrollView>
</RelativeLayout>